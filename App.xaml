<Application x:Class="PuzzeGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PuzzeGame"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="Flat" TargetType="Button">
            <Setter Property="Control.Background" Value="{x:Null}" />
            <Setter Property="Control.BorderBrush" Value="{x:Null}" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#7f8c8d"/>
                </Trigger>
                <Trigger Property="Control.IsFocused" Value="True">

                </Trigger>
            </Style.Triggers>
        </Style>

        <Image x:Key="image1" Source="/img/image1.png" Stretch="Fill" />
        <Image x:Key="image2" Source="/img/image2.png" Stretch="Fill"/>
        <Image x:Key="image3" Source="/img/image3.png" Stretch="Fill"/>
        <Image x:Key="image4" Source="/img/image4.png" Stretch="Fill"/>
        <Image x:Key="image5" Source="/img/image5.png" Stretch="Fill"/>
        <Image x:Key="image6" Source="/img/image6.png" Stretch="Fill"/>
        <Image x:Key="image7" Source="/img/image7.png" Stretch="Fill"/>
        <Image x:Key="image8" Source="/img/image8.png" Stretch="Fill"/>
        
    </Application.Resources>
</Application>
